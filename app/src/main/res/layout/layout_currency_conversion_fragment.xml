<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context="com.sadikul.currencyexchange.presentation.currencyconversion.ConversionFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/main_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:text="Currency Converter" />
    </RelativeLayout>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        app:layout_constraintTop_toBottomOf="@id/topLayout"
        android:id="@+id/progressLoader"
        android:indeterminate="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvInternetStatus"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/progressLoader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/topLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tvMyBalance"
        android:layout_width="match_parent"
        android:text="@string/my_balances"
        android:textColor="#70212121"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/balanceRecyclerview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMyBalance" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/balanceRecyclerview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tvCurrencyExchange"
        android:layout_width="match_parent"
        android:textColor="#70212121"
        android:textAllCaps="true"
        android:text="@string/currency_exchange"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/layoutCurrencyInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrencyExchange">
        <include
            android:id="@+id/layoutSell"
            layout="@layout/layout_currency_input_section" />
        <View
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:background="#10212121"
            android:layout_height="1dp"/>
        <include android:id="@+id/layout_buy"
            layout="@layout/layout_currency_input_section"/>
        <View
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:background="#10212121"
            android:layout_height="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButton"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/layoutCurrencyInput"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            android:layout_width="300dp"
            app:cornerRadius="20dp"
            android:textColor="@color/white"
            android:text="@string/submit"
            android:theme="@style/customButtonStyle"
            android:layout_height="50dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>